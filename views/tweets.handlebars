<div class="container row">
  <div class="col-8">
    <div class="div">
      <form action="/tweets" method="POST">
        <div class="form-group">
          <textarea class="form-control" id="text" name="text" rows="5" placeholder="What's on your mind"></textarea>
          <input id="pac-input" class="controls" type="text" placeholder="我在...">
          <input type="hidden" id="checkin_url" name="checkin_url" value="">
          <input type="hidden" id="checkin_name" name="checkin_name" value="">
        </div>
        <button type="submit" class="btn btn-primary">Tweet</button>
      </form>
    </div>
    <div class="div mt-2">
      {{#each tweets}}
      <div class="card mb-3">
        <div class="row ">
          <div class="col-md-4 ">
            <img src="{{this.User.avatar}}" class="card-img mt-3 ml-3" alt="...">
          </div>
          <div class="col-md-8">
            <div class="card-body row">
              <div class="col-12">
                <a href="/users/{{this.User.id}}/tweets">
                  <h5 class="card-title">@{{this.User.name}},{{this.createdAt}}</h5>
                </a>
                <p class="card-text">{{this.description}}</p>
                <a href="{{this.url}}">#{{this.place}}</a>
              </div>
              <div class="col-6">
                <a href="/tweets/{{this.id}}/replies">Reply({{this.reply}})</a>
              </div>
              <div class="col-6">
                {{#if this.isLiked }}
                <form action="/tweets/{{this.id}}/unlike?_method=DELETE" method="POST">
                  <button type="submit" class="btn btn-link " style="color: red;">Unlike({{this.like}})</button>
                </form>
                {{else}}
                <form action="/tweets/{{this.id}}/like" method="POST">
                  <button type="submit" class="btn btn-link">Like({{this.like}})</button>
                </form>
                {{/if}}
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  <div class="col-4">
    <h1>Popular</h1>
    {{#each users}}
    <div class="card mb-3">
      <div class="row ">
        <div class="col-md-4 ">
          <img src="{{this.avatar}}" class="card-img mt-3 ml-3" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <a href="/users/{{this.id}}/tweets">
              <h5 class="card-title">@{{this.name}}</h5>
            </a>
            <p class="card-text">{{this.introduction}}</p>
          </div>
          {{#if this.isFollowed }}
          <form action="/followships/{{this.id}}?_method=DELETE" method="POST">
            <div class="text-right mb-2 mr-2">
              <button type="submit" class="btn btn-danger">Unfollow</button>
            </div>
          </form>
          {{else}}
          {{#ifNoCond this.id ../nowUser}}
          <form action="/followships/{{this.id}}" method="POST">
            <div class="text-right mb-2 mr-2">
              <button type="submit " class="btn btn-primary">Follow</button>
            </div>
          </form>
          {{/ifNoCond}}
          {{/if}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
<script>
  function initAutocomplete() {
    var checkin_url = document.getElementById('checkin_url')  //這兩行用於填入名字跟網址
    var checkin_name = document.getElementById('checkin_name')
    var input = document.getElementById('pac-input');     //選取serchbox
    var searchBox = new google.maps.places.SearchBox(input);
    searchBox.addListener('places_changed', function () {         //監聽input有沒有改變
      var places = searchBox.getPlaces();   //獲取地點資訊
      if (places.length == 0) {             //若為空值return
        return;
      }

      places.forEach(function (place) {
        if (!place.geometry) {
          console.log("Returned place contains no geometry");
          return;
        }
      });
      checkin_url.value = places[0].url
      checkin_name.value = places[0].name //將需要資訊帶入
    });
  }</script>
<script src="https://maps.googleapis.com/maps/api/js?key=[API_KEY]&libraries=places&callback=initAutocomplete" async
  defer></script>